<%- include('./partials/header.ejs') %>

    <div class = "container">
        <div class = "row justify-content-center">
            <div class="col-6">
                <form>
                    <div class="text-center">
                        <img class="img-fluid mb-4" src="/images/sm-heatcentralv1.png" alt="heat central logo">
                    </div>  
                <h1 class="h3 mb-3 fw-normal text-center">Sign up in minutes!</h1>
                    <div class="form">
                        <label  class="mb-2">Name</label>
                        <input type="text" class="form-control mb-2" placeholder="Jimmy G. Buckets">
                    </div>
                    <div class="form">
                        <label  class="mb-2">Email address</label>
                        <input type="email" class="form-control mb-2" placeholder="norm@uncc.com">
                    </div>
                    <div class="form">
                        <label  class="mb-2">Date of Birth</label>
                        <input type="date" class="form-control mb-2">
                    </div>
                    <div class="form">
                        <label class="mb-2" >Password</label>
                        <input type="password" class="form-control mb-1" placeholder="Password">
                    </div>
                    <div class="form text-center mt-2">
                        <a href="/login">
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                    Login instead
                    </button>
                </a>
                    </div>
                    <div class="text-center">
                        <button class="w-50 btn btn-lg btn-primary mt-2" type="submit">Sign up</button>
                    </div>  
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>